{
  "name": "atom-package-deps",
  "version": "6.0.0",
  "description": "Automatically install package dependencies",
  "main": "lib/index.js",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "lint": "(eslint .) && (flow check) && (prettier --list-different src/*.js)",
    "test": "apm test",
    "clean": "rm -rf lib",
    "dev": "npm run clean && env NODE_ENV=development env BABEL_ENV=production rollup -c -w",
    "build": "npm run clean && env NODE_ENV=production env BABEL_ENV=production rollup -c"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/steelbrain/package-deps.git"
  },
  "keywords": [
    "atom"
  ],
  "author": "steelbrain",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AtomLinter/package-deps/issues"
  },
  "homepage": "https://github.com/AtomLinter/package-deps#readme",
  "dependencies": {
    "@steelbrain/spawn": "^0.2.0",
    "escape-html": "^1.0.3",
    "p-filter": "^2.1.0",
    "semver": "^7.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@rollup/plugin-babel": "^5.2.0",
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-node-resolve": "^8.0.1",
    "@types/atom": "^1.40.4",
    "@types/escape-html": "^1.0.0",
    "@types/jasmine": "^3.5.10",
    "@types/semver": "^7.3.2",
    "flow-bin": "^0.126.1",
    "jasmine-fix": "^1.3.1",
    "patch-package": "^6.2.2",
    "prettier": "^2.0.5",
    "rollup": "^2.14.0",
    "typescript": "^3.9.7"
  }
}
